<mujoco>
   <worldbody>
      <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
      <geom type="plane" size="5 5 0.1" rgba="128 255 225 0.75"/>
      <body euler="0 0 90"  pos="0 0 1">
      	<joint type="free"/>
      	<geom type="box" size=".22 .71 .16" pos="0 0 0.19" rgba="1 0 0 1"/>    //Base Frame
        <geom type="box" size=".01 .35 .65" pos="0 0 0.93" rgba="0 0 1 1"/>        //PCB
        <geom type="box" size=".08 0.38 .25" pos="0.034 0 1.34" rgba="1 0 0 1"/> 	//Battery holder
        <site type="box" size="0.01 .01 .01" pos="0 0 0.1" rgba=".9 .1 .9 1" name="IMU"/>  //Sensor
        <body pos="0 0 0">
      		  <joint axis="0 1 0" name="lmotor" pos="0 -0.87 0" range="-.52 1.05" damping="2" type="hinge"/>//stiffness="240" type="hinge"/>
      	  	<geom type="cylinder" euler="90 0 0" size=".7 .14 " pos="0 -0.87 0" rgba="0.128 0.128 0.128 1"/>
      	</body>
      	<body pos="0 0 0">
		        <joint axis="0 -1 0" name="rmotor" pos="0 0.87 0" range="-.52 1.05" damping="2" type="hinge"/>//stiffness="240" type="hinge"/>
            <geom type="cylinder" euler="90 0 0" size=".7 .14 " pos="0 0.87 0" rgba="0.100 0.100 0.100 1"/>
      	</body>
      </body>
    </worldbody>
    <sensor>
          <accelerometer name="Acc" site="IMU" />
          <gyro name="Gyro" site="IMU" />
	        <jointpos name="Lencoder" joint="lmotor"/>
	        <jointpos name="Rencoder" joint="rmotor"/>
    </sensor>
    <actuator>
    	<motor  joint="lmotor" name="almotor"/>// gaintype="user" gainrpm="1 0 0"name="almotor"/>
   	  <motor  joint="rmotor" name="armotor"/>
    </actuator>
</mujoco>
